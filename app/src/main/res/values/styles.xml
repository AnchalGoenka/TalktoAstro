<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>-->
    </style>


    <style name="MyAppTheme" parent="AppTheme" />

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_search_hint</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="SearchViewThemeEvents" parent="Widget.AppCompat.Light.SearchView">
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="style_body_title_h1_regular_small" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/offBlack</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="style_body_title_h1_regular" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/offBlack</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_body_title_h1_regular_grey_small" parent="@style/TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/gray</item>
    <item name="android:fontFamily">@string/font_family_regular</item>
    <item name="android:letterSpacing">0.05</item>
    <item name="android:textSize">14sp</item>
    </style>
    <style name="style_body_title_h1_regular_grey" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="style_body_title_h1_regular_medium" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_body_title_h1_regular_large" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_body_title_h1_regular_large_grey" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_body_title_h1_regular_medium_gray" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_body_title_h1_nav_header" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_body_title_h1_regular_header" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/text_gray_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
