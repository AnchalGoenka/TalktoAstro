    <corners
            android:radius="5dp"
    />
    <gradient
            android:gradientRadius="45"
            android:centerX="35%"
            android:centerY="50%"
            android:startColor="@color/transparent"
            android:endColor="@color/transparent"
            android:type="radial"
    />
    <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
    />
