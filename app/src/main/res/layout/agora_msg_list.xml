<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/rl_astro"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_2sdp"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginBottom="@dimen/_1sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:background="@drawable/astro_chat_bubble"
            android:orientation="vertical">
         <TextView
             android:id="@+id/tv_astro_name"
                 android:layout_width="@dimen/_40sdp"
                 android:layout_height="@dimen/_40sdp"
                 android:background="@drawable/shape_circle_red"
                 android:ellipsize="end"
                 android:gravity="center"
                 android:lines="1"
                 android:visibility="gone"
             android:textSize="@dimen/_10sdp"
             android:textColor="@color/white"/>
        <TextView
                android:id="@+id/tv_astro_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_astro_name"
                android:text="hi"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:gravity="start"
                android:layout_marginBottom="1dp"
               android:textColor="@color/black"
               android:visibility="gone"/>

        <TextView

            android:id="@+id/tv_astro_TimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 pM"
                android:layout_gravity="end"
                android:textSize="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_below="@+id/tv_astro_msg"
                />
        <ImageView
                android:id="@+id/iv_img_astro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_astro_name"
                android:background="@drawable/icon_msg_l"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/user_chat_bubble"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_circle_green"
                android:ellipsize="marquee"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:singleLine="true"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/tv_user_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="start"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="Hi"
                android:textColor="@color/black"
                android:visibility="gone" />
        <TextView
                android:id="@+id/tv_userTimeStamp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aac:pm"
                android:layout_marginBottom="@dimen/_1sdp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textSize="@dimen/_8sdp"
                android:layout_below="@+id/tv_user_msg"/>

        <ImageView
                android:id="@+id/iv_img_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_user_name"
                android:background="@drawable/icon_msg_r"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>