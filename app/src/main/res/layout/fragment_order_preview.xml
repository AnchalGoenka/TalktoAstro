<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dp6"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.OrderPreview">
    <LinearLayout

            android:layout_width="0dp"
            android:padding="@dimen/dp10"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout5">
        <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="@dimen/dp16"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Recharge Pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txv_recharge_pack"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/open_sans_semibold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txv_recharge_value"
                    android:padding="10dp"
                    android:textSize="@dimen/dp16"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_marginTop="2dp"
                    android:layout_below="@+id/txv_recharge_pack"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txv_amount_order_preview"
                    tools:layout_editor_absoluteY="44dp"
                    tools:layout_editor_absoluteX="0dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                    android:paddingBottom="10dp" android:paddingTop="10dp" android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp" android:fontFamily="@font/open_sans_semibold"/>

            <TextView
                    android:id="@+id/txv_amount_value_order_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="44dp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_marginTop="2dp"
                    android:layout_below="@+id/txv_amount_order_preview"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txv_service_charge_order_preview"
                    tools:layout_editor_absoluteY="102dp"
                    tools:layout_editor_absoluteX="7dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                    android:paddingBottom="10dp" android:paddingTop="10dp" android:layout_alignParentLeft="true"
                    android:fontFamily="@font/open_sans_semibold"/>

            <TextView
                    android:id="@+id/txv_service_charge_value_order_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="102dp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_marginTop="2dp"
                    android:layout_below="@+id/txv_service_charge_order_preview"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Amount to be paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txv_amount_to_be_paid"
                    tools:layout_editor_absoluteY="179dp"
                    tools:layout_editor_absoluteX="0dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                    android:paddingBottom="10dp" android:paddingTop="10dp" android:layout_alignParentLeft="true"
                    android:fontFamily="@font/open_sans_semibold"/>

            <TextView
                    android:id="@+id/txv_amount_to_be_paid_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="179dp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_marginTop="2dp"
                    android:layout_below="@+id/txv_amount_to_be_paid"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Talktime value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txv_talktime"
                    tools:layout_editor_absoluteY="247dp"
                    tools:layout_editor_absoluteX="16dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                    android:paddingBottom="10dp" android:paddingTop="10dp" android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp" android:fontFamily="@font/open_sans_semibold"/>

            <TextView
                    android:id="@+id/txv_talktime_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="247dp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_marginTop="2dp"
                    android:layout_below="@+id/txv_talktime"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:background="@drawable/button_rounded_corners_gray"
            android:weightSum="2"
            android:id="@+id/ll_coupon_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="@dimen/dp8">

    <EditText
            android:layout_weight="1.3"
            android:padding="@dimen/dp10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:id="@+id/txv_coupan_code"
            android:hint="Have Coupon Code ?"
            android:layout_marginEnd="4dp"
            />
    <Button
            android:layout_weight="0.7"
            android:padding="@dimen/dp10"
            android:text="@string/apply"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/btn_apply_coupan_code"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
            android:text="Proceed for payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white_ish"
            android:id="@+id/btn_proceed_for_payment"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_signup"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_coupon_code"

            />
</androidx.constraintlayout.widget.ConstraintLayout>