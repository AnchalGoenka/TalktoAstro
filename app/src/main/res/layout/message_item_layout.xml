<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

        <LinearLayout
                android:id="@+id/authorLine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/avatar"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/reachability"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="5dip"
                    android:layout_toEndOf="@+id/author"
                    android:scaleType="centerCrop" />

        </LinearLayout>

        <tta.destinigo.talktoastro.views.MessageTextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_speech_bubble_incoming"
                android:gravity="left"
                android:minEms="5"
                android:padding="15dp"
                android:text="some body text"
                android:textColor="@android:color/primary_text_light"
                android:visibility="gone" />

        <tta.destinigo.talktoastro.views.MessageTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/body"
                android:layout_margin="5dip"
                android:gravity="left"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:text="Thursday, 30 June 2016 - 17:39"
                android:textColor="@color/gray"
                android:visibility="gone"
                tools:ignore="UnknownIdInLayout" />

        <tta.destinigo.talktoastro.views.MessageTextView
                android:id="@+id/bodyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/bg_speech_bubble_outgoing"
                android:gravity="left"
                android:minEms="5"
                android:padding="15dp"
                android:text="some body text"
                android:textColor="@android:color/primary_text_light"
                android:visibility="gone" />

        <tta.destinigo.talktoastro.views.MessageTextView
                android:id="@+id/dateRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bodyRight"
                android:layout_alignParentRight="true"
                android:layout_margin="5dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:text="Thursday, 30 June 2016 - 17:39"
                android:textColor="@color/gray"
                android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
