<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewUI.Activity.HomeActivity">
    <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/_5sdp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="8">
                <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/iv_customtoolbar_backHumber"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:src="@mipmap/ic_launcher_foreground" />
                <TextView
                        android:padding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/tv_customtoolbar_title"
                        android:layout_weight="3.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:text="Talk to Astro"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/iv_customtoolbar_home_wallet"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:src="@drawable/wallet" />
                <TextView
                        android:id="@+id/tv_customtoolbar_home_wallet"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/bg"
                        android:fontFamily="@font/sf_pro_display_medium"/>
                <FrameLayout
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/frame_layout_notification"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_width="0dp">
                    <ImageView

                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/iv_customtoolbar_filter"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_notification_filled" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5+"
                            android:textColor="@color/primaryDark"
                            android:layout_marginLeft="@dimen/_10sdp"/>
                </FrameLayout>
                <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/shape_circle_red"
                        android:fontFamily="@font/sf_pro_display_medium"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
<androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/framelayout_newHomeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardview"
        android:layout_above="@+id/cv_bottom_nav"/>
<androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_3sdp"
        android:id="@+id/cv_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="5dp">
    <LinearLayout
           android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:background="@color/white">
        <LinearLayout
                android:id="@+id/ll_home"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_home"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="1"
                    android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_menu"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_menu_2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_talk"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_phone_call_2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talk"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_report"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_report2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_chat"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chatbubbles_2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_more"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_more"/>
            <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>