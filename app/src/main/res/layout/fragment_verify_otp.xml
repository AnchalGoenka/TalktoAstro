<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".view.VerifyOtp">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/linearLayout2"
                  app:layout_constraintDimensionRatio=""
                  app:layout_constraintTop_toBottomOf="@+id/txv_otp_verified" android:layout_marginTop="50dp">
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp"
                tools:layout_editor_absoluteX="16dp"
                android:id="@+id/num1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
        />
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="16dp"
                android:id="@+id/num2"
                android:textAlignment="center" android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
        />
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/num3"
                android:textAlignment="center" android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
        />
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/num4"
                android:textAlignment="center" android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
        />
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="16dp"
                android:id="@+id/num5"
                android:textAlignment="center" android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                />
        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="16dp"
                android:id="@+id/num6"
                android:textAlignment="center" android:textSize="36sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                />
    </LinearLayout>

    <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_signup"
            android:text="Submit"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/button_Resend" />

    <TextView
            android:text="OTP verified successfully"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txv_otp_verified" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAlignment="center" android:textSize="18sp" android:textColor="@color/color_green_mid_dark"
            android:visibility="gone" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txv_timer_otp"
            android:layout_width="72dp"
            android:layout_height="23dp"
            android:text="TextView"
            android:textColor="@color/color_button_green"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_Resend"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/button_Resend" />

    <Button
            android:id="@+id/button_Resend"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:text="Resend"
            android:textColor="@color/bottom_white"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>