<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/dp10"
        tools:context=".view.PayOnline">
<RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/txv_razorpay"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_razorpay_logo"
            android:clickable="true"
            android:padding="@dimen/dp20"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"/>
    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_razorpay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>
</RelativeLayout>

    <View
            android:id="@+id/view_razorPay"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

    <RelativeLayout
            android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
            android:id="@+id/txv_paytm"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_paytm_icon"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:padding="@dimen/dp20"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/check_paytm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
            android:id="@+id/view_paytm"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>


</LinearLayout>