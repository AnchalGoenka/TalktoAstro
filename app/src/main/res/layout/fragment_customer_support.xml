<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight_Dark"
        android:orientation="vertical">


    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_support" />

    <TextView
            android:id="@+id/txv_phone_number"
            style="@style/style_body_title_h1_regular_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="5dp"
            android:text="+91-8860095202"
            android:textAlignment="center" />

    <TextView
            android:id="@+id/txv_whatsapp_number"
            style="@style/style_body_title_h1_regular_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:drawableStart="@drawable/ic_whatsapp"
            android:drawablePadding="5dp"
            android:text="+91-8860095202"
            android:textAlignment="center" />

    <TextView
            android:id="@+id/txv_email"
            style="@style/style_body_title_h1_regular_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:text="support@talktoastro.com"
            android:textAlignment="center" />

    <TextView
            android:id="@+id/textView5"
            style="@style/style_body_title_h1_regular_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:text="We are available Monday to Saturday from 10 AM to 7 PM (IST)"
            android:textAlignment="center" />

    <TextView
            android:id="@+id/txv_website"
            style="@style/style_body_title_h1_regular_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Website: www.talktoastro.com"
            android:textAlignment="center"
            android:textColorLink="@color/color_button_blue" />
</LinearLayout>